{
  "compilerOptions": {
    "baseUrl": "./",
    "lib": ["es2021"],
    "module": "NodeNext",
    "target": "es2021",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
